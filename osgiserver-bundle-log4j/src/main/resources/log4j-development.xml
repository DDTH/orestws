<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!-- Log4j Configuration for bundles deployed on OSGiSERVER (Development Environment) -->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender class="org.apache.log4j.ConsoleAppender" name="console_osgiserver">
		<layout class="org.apache.log4j.SimpleLayout" />
	</appender>

	<appender class="org.apache.log4j.DailyRollingFileAppender"
		name="file_osgiserver">
		<param name="append" value="true" />
		<param name="DatePattern" value=".yyyy-MM-dd" />
		<param name="File" value="${osgiserver.home}/logs/osgiserver.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{ISO8601} %-5p %x%n  LoggingClass: %c/%C%n  LogMessage: %m%n  %l%n  %L%n" />
		</layout>
	</appender>

    <!--
	<logger name="com">
		<level value="debug" />
		<appender-ref ref="console_osgiserver" />
		<appender-ref ref="file_osgiserver" />
	</logger>
	<logger name="net">
		<level value="debug" />
		<appender-ref ref="console_osgiserver" />
		<appender-ref ref="file_osgiserver" />
	</logger>
	<logger name="org">
		<level value="debug" />
		<appender-ref ref="console_osgiserver" />
		<appender-ref ref="file_osgiserver" />
	</logger>
	-->

	<root>
		<level value="debug" />
		<appender-ref ref="file_osgiserver" />
	</root>

</log4j:configuration>